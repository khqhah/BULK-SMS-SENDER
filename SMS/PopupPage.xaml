<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SMS.PopupPage"
             BackgroundColor="#80000000"
             Padding="20"
             
             >
    <Frame BackgroundColor="Transparent"
           HeightRequest="440"
           Padding="30"           
           CornerRadius="10"
           HasShadow="true">
        <StackLayout Spacing="180" HorizontalOptions="Center" VerticalOptions="Center">
            <ActivityIndicator IsRunning="True" Color="white"/>
            <Label Text="Please wait sending Message..." FontSize="18" TextColor="White" HorizontalOptions="Center"/>
        </StackLayout>
    </Frame>
</ContentPage>